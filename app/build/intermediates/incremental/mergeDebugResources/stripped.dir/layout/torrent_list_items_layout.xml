<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        
                                                        

    
                 
                                
                                                         
                 
                          
                                                        
                   
           

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="1sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/torrent_list_items_layout_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tvSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tag="binding_1"       
                                                                     />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tvType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvQuality"
                android:tag="binding_2"    
                                                                  />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tvLLSP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSize"
                android:tag="binding_3"    
                                                                  />

            <LinearLayout
                android:id="@+id/tvLLSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvType">

                <TextView
                    android:id="@+id/tvSeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="14sp"
                    android:tag="binding_4"     
                                                                       />

                <TextView
                    android:id="@+id/tvPeers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:tag="binding_5"     
                                                                       />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ivDownloadButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                android:background="@drawable/rounded_button_background"
                android:padding="4dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.463"
                app:srcCompat="@drawable/ic_cloud_download_black_48dp"
                tools:targetApi="lollipop" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         